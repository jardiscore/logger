{
  "name": "jardiscore/logger",
  "description": "Jardis logger is a very powerful and flexible PHP logging library that allows you to log data in various formats and send it to different destinations such as files, databases, emails, or external services.",
  "type": "library",
  "license": "MIT",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Jardis Core Development",
      "email": "jardisCore@headgent.dev"
    }
  ],
  "require": {
    "php": ">=8.2",
    "psr/container": "^2.0",
    "psr/log": "^1.1",
    "ext-json": "*",
    "ext-pdo": "*",
    "ext-redis": "*",
    "jardiscore/dotenv": "1.0.0",
    "ext-amqp": "*",
    "ext-rdkafka": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^2.0.4",
    "squizlabs/php_codesniffer": "^3.11.2"
  },
  "autoload": {
    "psr-4": {
      "JardisCore\\Logger\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "JardisCore\\Logger\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "echo '#!/usr/bin/env bash' > .git/hooks/pre-commit",
      "echo 'bash ./support/pre-commit-hook.sh' >> .git/hooks/pre-commit",
      "chmod +x .git/hooks/pre-commit"
    ]
  },
  "homepage": "https://github.com/jardiscore/logger",
  "support": {
    "issues": "https://github.com/jardiscore/logger/issues",
    "email": "jardisCore@headgent.dev"
  },
  "keywords": ["logger", "log formatter", "domain driven design", "DDD", "jardis", "lane4 digital"]
}
